{
    "name": "bindbc-blend2d",
    "description": "Dynamic and static bindings to the Blend2D C API, compatible with -betterC, @nogc, and nothrow.",
    "authors": ["kdmult"],
    "license": "BSL-1.0",

    "targetPath": "lib",
    "targetType": "staticLibrary",

    "subPackages": [
        "samples/bl-capi-sample",
        "samples/bl-getting-started-5",
    ],

    "configurations": [
        {
            "name": "dynamic",
            "versions": ["BindBlend2D_Dynamic"],
            "dependencies": {
                "bindbc-loader": "~>0.2.1"
            }
        },
        {
            "name": "dynamicBC",
            "versions": ["BindBlend2D_Dynamic"],
            "dependencies": {
                "bindbc-loader": "~>0.2.1"
            },
            "subConfigurations": {
                "bindbc-loader": "yesBC"
            },
            "dflags": ["-betterC"]
        },
        {
            "name": "static",
            "versions": ["BindBlend2D_Static"],
            "excludedSourceFiles": [
                "source/bindbc/blend2d/binddynamic.d"
            ]
        },
        {
            "name": "staticBC",
            "versions": ["BindBlend2D_Static"],
            "excludedSourceFiles": [
                "source/bindbc/blend2d/binddynamic.d"
            ],
            "dflags": ["-betterC"]
        },
    ]
}
