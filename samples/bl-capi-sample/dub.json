{
    "name": "bl-capi-sample",

    "targetPath": "../../bin",
    "targetType": "executable",

    "dependencies": {
        "bindbc-blend2d" : { "path" : "../.." }
    },

    "libs": [ "asmjit", "blend2d" ],

    "configurations" : [
        {
            "name" : "dynamic",
            "subConfigurations" : {
                "bindbc-blend2d": "dynamic"
            }
        }, 
        {
            "name" : "dynamicBC",
            "subConfigurations" : {
                "bindbc-blend2d": "dynamicBC"
            },
            "dflags": ["-betterC"]
        }, 
        {
            "name" : "static",
            "subConfigurations" : {
                "bindbc-blend2d": "static"
            }
        },
        {
            "name" : "staticBC",
            "subConfigurations" : {
                "bindbc-blend2d": "staticBC"
            },
            "dflags": ["-betterC"]
        }
    ]
}
